{
  "compilerOptions": {
    "sourceMap": true,
    "target": "ES2020",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./src",
    "moduleResolution": "Node",
    "resolveJsonModule": true
  },
  "exclude": ["node_modules"]
}
